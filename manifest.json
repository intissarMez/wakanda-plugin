{
  manifest_version:"1.0.0", 
 "repository":"https://github.com/wakanda/plugins/codeEditor",      
 "triggers":[{
    entry:init

   }], 
menu:{
   "menu-bar":[
      {
         "label":"File",
         "submenu":[
            {
               "label":"Save",
               "command":"IDE.save"
            },
            {
               "label":"Save All",
               "command":"IDE.saveAall"
            }
         ]
      },
      {
         "label":"Edit",
         "submenu":[
            {
               "label":"Undo",
               "command":"IDE.undo"
            },
            {
               "label":"Redo",
               "command":"IDE.redo"
            },
            {
               "group":"edit"
            },
            {
               "label":"Copy",
               "command":"IDE.copy"
            },
            {
               "label":"Cut",
               "command":"IDE.cut"
            },
            {
               "label":"Paste",
               "command":"IDE.paste"
            },
            {
               "label":"Select All",
               "command":"IDE.selectAll"
            },
            {
               "group":"text"
            },
            {
               "label":"Toggle Comment",
               "command":"IDE.toggleComment"
            }
         ]
      }
   ],
  
   "context-menu":{
      "editor":[
         {
            "label":"Cut",
            "command":"IDE.cut"
         },
         {
            "label":"Copy",
            "command":"IDE.copy"
         },
         {
            "label":"Paste",
            "command":"IDE.paste"
         },
         {
            "label":"Select All",
            "command":"IDE.selectAll"
         },
         {
            "group":"history"
         },
         {
            "label":"Undo",
            "command":"IDE.undo"
         },
         {
            "label":"Redo",
            "command":"IDE.redo"
         }
      ]
   }

},
shortcuts:{
   "darwin":[
      {
         "keymap":"cmd+s",
         "command":"IDE.save"
      },
      {
         "keymap":"cmd+alt+s",
         "command":"IDE.saveAall"
      },
      {
         "keymap":"cmd+c",
         "command":"IDE.copy"
      },
      {
         "keymap":"cmd+x",
         "command":"IDE.cut"
      },
      {
         "keymap":"cmd+a",
         "command":"IDE.selectAll"
      },
      {
         "keymap":"cmd+y",
         "command":"IDE.redo"
      },
      {
         "keymap":"cmd+z",
         "command":"IDE.undo"
      },
      {
         "keymap":"cmd+/",
         "command":"IDE.toggleComment"
      }
   ],
   "linux":[
      {
         "keymap":"cmd+s",
         "command":"IDE.save"
      },
      {
         "keymap":"cmd+alt+s",
         "command":"IDE.saveAll"
      },
      {
         "keymap":"cmd+c",
         "command":"IDE.copy"
      },
      {
         "keymap":"cmd+x",
         "command":"IDE.cut"
      },
      {
         "keymap":"cmd+a",
         "command":"IDE.selectAll"
      },
      {
         "keymap":"cmd+y",
         "command":"IDE.redo"
      },
      {
         "keymap":"cmd+z",
         "command":"IDE.undo"
      },
      {
         "keymap":"cmd+/",
         "command":"IDE.toggleComment"
      }
   ],
   "win32":[
      {
         "keymap":"ctrl+s",
         "command":"IDE.save"
      },
      {
         "keymap":"ctrl+alt+s",
         "command":"IDE.saveAll"
      },
      {
         "keymap":"ctrl+c",
         "command":"IDE.copy"
      },
      {
         "keymap":"ctrl+x",
         "command":"IDE.cut"
      },
      {
         "keymap":"ctrl+a",
         "command":"IDE.selectAll"
      },
      {
         "keymap":"ctrl+y",
         "command":"IDE.redo"
      },
      {
         "keymap":"ctrl+z",
         "command":"IDE.undo"
      },
      {
         "keymap":"ctrl+/",
         "command":"IDE.toggleComment"
      }
   ]
},
//the section below isn't a part of a new wakanda plugin
editor:[
      {
        "fileExtension":["html","css","js"],
        "embedEntery":"index.html",
        "triggerEvents":{"onLoad":"IDE.loadFile"}
      }
    ]


}
